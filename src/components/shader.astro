---
import * as glsl from '../../public/glsl-canvas.js';
---
<script type="text/javascript" src="/glsl-canvas.js"></script>
<canvas id="shadercanvas" class="glslCanvas" data-fragment-url="shader.glsl" width="100" height="100"></canvas>
<script is:inline>
    const canvas = document.getElementById('shadercanvas');
    const glslcanvas = glsl.of(canvas, {});
    canvas.style.width='100%';
    canvas.style.height='100%';
    canvas.width  = canvas.offsetWidth;
    canvas.height = canvas.offsetHeight;
</script>